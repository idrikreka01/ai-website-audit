APP_ENV=local
LOG_LEVEL=INFO

POSTGRES_USER=YOUR_DB_USER
POSTGRES_PASSWORD=YOUR_DB_PASSWORD
POSTGRES_DB=ai_website_audit

DATABASE_URL=postgresql+psycopg://USER@localhost:5432/ai_website_audit
TEST_DATABASE_URL=postgresql+psycopg://USER@localhost:5432/ai_website_audit_test

REDIS_URL=redis://localhost:6379/0

STORAGE_ROOT=./storage
ARTIFACTS_DIR=./artifacts

LOG_STDOUT=false
LOG_FILE=./logs/app.log

PYTHONPATH=.

OPENAI_API_KEY=your-openai-api-key
OPENAI_PRICE_INPUT_PER_1M=2.50
OPENAI_PRICE_OUTPUT_PER_1M=10.00

HTML_ANALYSIS_MODE=automatic
HTML_ANALYSIS_MODEL=gpt-5.2
HTML_ANALYSIS_CHUNK_STRATEGY=all
HTML_ANALYSIS_BUY_BOX_EXTRACTION=true
HTML_ANALYSIS_SEND_FULL_HTML=false
HTML_ANALYSIS_REQUEST_TIMEOUT_SEC=120
HTML_ANALYSIS_MAX_HTML_CHARS=100000
HTML_ANALYSIS_FULL_HTML_CHUNK_CHARS=100000
HTML_ANALYSIS_FULL_HTML_MAX_CHUNKS=60

DISABLE_LOCKS=true
DISABLE_THROTTLE=true

DOMAIN_LOCK_TTL_SECONDS=300
DOMAIN_LOCK_MAX_RETRIES=3
DOMAIN_LOCK_BACKOFF_BASE_MS=1000
DOMAIN_MIN_DELAY_MS=2000
DOMAIN_THROTTLE_TTL_SECONDS=60

HTML_RETENTION_DAYS=14
RETENTION_CLEANUP_ENABLED=false
RETENTION_CLEANUP_BATCH_SIZE=100
RETENTION_CLEANUP_DRY_RUN=false

AUDIT_JOB_TIMEOUT_SECONDS=1200

HTML_ANALYSIS_SINGLE_REQUEST=true
HTML_ANALYSIS_SMART_CHUNKING=true
HTML_ANALYSIS_CHUNK_CHARS=80000
HTML_ANALYSIS_MAX_CHUNKS=25

TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id

# Optional: for import_questions.py
# CSV_PATH=/app/questions.csv
